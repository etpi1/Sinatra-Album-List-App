<h4>New Player for <%= @team.city %> <%= @team.name %></h4>

<form method="POST" action="/players/create">
	<input type="hidden" name="id" value="<%= @team.id %>">
	<label for="first_name">First Name: </label>
	<input type="text" id="first_name" name="first_name" placeholder="Enter first name..."><br>
	<label for="last_name">Last Name: </label>
	<input type="text" id="last_name" name="last_name" placeholder="Enter last name..."><br>
	<label for="number">Jersey Number: </label>
	<input type="number" id="number" name="number" placeholder="Jersey Number..."><br>
	<input type="submit" value="Add Player">
</form>
